int evenFibSum() {
  int sum = 0;
  int n = 1;
  int curr = nthFib(n);
  while (curr < 4000000) {
    curr = nthFib(n);
    if (curr%2 == 0) sum += curr;
    n++;
  }
  return sum;
}

int nthFib(int n) {
  if (n==1 || n==2) return n;
  return nthFib(n-1) + nthFib(n-2);
}

